@model RegistrationLoginDemo.Models.Login

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_LoginSignUp.cshtml";
}



<div class="loginbox">
        <div  class="logo"></div>
        <h2>Login Here</h2>
        <div class="alert-danger">
            @if(ViewData["loginfailed"]!=null)
            {
                @ViewData["loginfailed"]
            }
        </div>
    <form asp-action="Create">
            <p>Email Id</p>
            <input type="email" name="Email" placeholder="Enter Username" required>
            <p>Password</p>
            <input type="password" name="Password" placeholder="Enter Password" required>
            <input type="submit"  value="Login">
        <a asp-controller="Registration" asp-action="Create">Dont't have an account</a>
        </form>
    </div>






@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

